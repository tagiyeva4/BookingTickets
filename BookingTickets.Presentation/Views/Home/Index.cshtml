<!-- Schedule One Start -->
<section class="schedule-one">
    <div class="container">
        <div class="schedule-one__inner">
            <div class="section-title text-left">
                <div class="section-title__tagline-box">
                    <span class="section-title__tagline">Event Schedule</span>
                </div>
                <h2 class="section-title__title"></h2>
            </div>
            <div class="schedule-one__main-tab-box tabs-box">
                <ul class="tab-buttons clearfix list-unstyled">
                </ul>
                <div class="tabs-content">
                    <!--tab-->
                    <div class="tab active-tab" id="1st-day">
                        <div class="schedule-one__tab-content-box">
                            @foreach (var eventtt in Model.Events)
                            {
                                <div class="schedule-one__single">
                                    <div class="schedule-one__left">
                                        <h3 class="schedule-one__title">
                                            <a asp-action="Detail" asp-controller="Event" asp-route-id="@eventtt.Id">
                                                @eventtt.Name
                                            </a>
                                        </h3>
                                    </div>
                                    <div class="schedule-one__img">
                                        <img src=@eventtt.EventImages.FirstOrDefault()?.ImagePath alt="">
                                    </div>
                                    <div class="schedule-one__address-and-btn-box">
                                        <ul class="list-unstyled schedule-one__address">
                                            <li>
                                                <div class="icon">
                                                    <span class="icon-clock"></span>
                                                </div>
                                                <div class="text">
                                                    @{
                                                        var schedule = eventtt.EventsSchedules.FirstOrDefault()?.Schedule;
                                                    }

                                                    @if (schedule != null)
                                                    {
                                                        <span>
                                                            @schedule.Date.ToString("d MMMM", new System.Globalization.CultureInfo("az-Latn-AZ"))
                                                            (@schedule.StartTime.ToString(@"hh\:mm").Replace(":", ".") - @schedule.EndTime.ToString(@"hh\:mm").Replace(":", "."))
                                                        </span>
                                                    }

                                                </div>
                                            </li>
                                            <li>
                                                <div class="icon">
                                                    <span class="icon-pin"></span>
                                                </div>
                                                <div class="text">
                                                    <p>@eventtt.Venue.Name</p>
                                                </div>
                                            </li>
                                        </ul>
                                        <div class="schedule-one__btn-box">
                                            <a asp-action="Detail" asp-controller="Event" asp-route-id="@eventtt.Id" class="schedule-one__btn thm-btn">
                                                Buy Ticket<span class="icon-arrow-right"></span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Schedule One End -->

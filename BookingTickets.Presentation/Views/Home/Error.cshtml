@model ErrorViewModel


<!--Error Page Start-->
<section class="error-page">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="error-page__inner">
                    <div class="error-page__title-box">
                        <h2 class="error-page__title">404</h2>
                    </div>

                    <!-- ✨ Error Message -->
                    <h3 class="error-page__tagline">
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            @Model.ErrorMessage
                        }
                        else
                        {
                            <text>Sorry, we can't find that page!</text>
                        }
                    </h3>

                    <p class="error-page__text">
                        The page you are looking for was never existed.
                    </p>

                    <a asp-action="Index" asp-controller="Home" class="thm-btn error-page__btn">
                        Back to home <span class="icon-arrow-right"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Error Page End-->

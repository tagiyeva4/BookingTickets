@using BookingTickets.Core.ViewModels.UserSystemViewModels
@model UserRegisterVm
<!--Contact One Start-->
<section class="contact-one">
    <div class="container">
        <div class="contact-one__inner">
            <h3 class="contact-one__title">Register </h3>
            <p class="contact-one__text">
                "Unforgettable events are just a few steps away! Sign up now to stay updated on the best events."
            </p>
            <form class="contact-form-validated contact-one__form" method="post" novalidate="novalidate">
                @if (TempData["Succsess"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["Succsess"]
                    </div>
                }
                <div class="row">
                    <div class="col-xl-12 col-lg-12">
                        <div class="contact-one__input-box">
                            <input asp-for="UserName" placeholder="User Name" required="">
                        </div>
                        <span class="text-primary" asp-validation-for="UserName"></span>
                    </div>
                    <div class="col-xl-12 col-lg-12">
                        <div class="contact-one__input-box">
                            <input asp-for="FullName" placeholder="Full Name" required="">
                        </div>
                        <span class="text-primary" asp-validation-for="FullName"></span>
                    </div>
                    <div class="col-xl-12 col-lg-12">
                        <div class="contact-one__input-box">
                            <input asp-for="Email" placeholder="Your Email" required="">
                        </div>
                        <span class="text-primary" asp-validation-for="Email"></span>
                    </div>
                    <div class="col-xl-12 col-lg-12">
                        <div class="contact-one__input-box">
                            <input asp-for="Password" placeholder="Password" required=""><br>
                        <span class="text-primary" asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="col-xl-12 col-lg-12">
                        <div class="contact-one__input-box">
                            <input asp-for="ConfirmPassword" placeholder="ConfirmPassword" required=""><br>
                            <span class="text-primary" asp-validation-for="ConfirmPassword"></span>
                        </div>
                    </div>
                    <div class="col-xl-12 col-lg-12 form-check">
                        <input type="checkbox" asp-for="Subscribe" class="form-check-input">
                        <label class="form-check-label" for="exampleCheck1">Subscribe</label>
                    </div>
                    <div class="main-menu__btn-box">
                        <button type="submit" class="main-menu__btn thm-btn">
                            Register <span class="icon-arrow-right"></span>
                        </button>
                    </div>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            </form>
            <div class="result"></div>
        </div>
    </div>
</section>
<!--Contact One End-->
@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js" integrity="sha512-xq+Vm8jC94ynOikewaQXMEkJIOBp7iArs3IhFWSWdRT3Pq8wFz46p+ZDFAR7kHnSFf+zUv52B3prRYnbDRdgog==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.21.0/jquery.validate.min.js" integrity="sha512-KFHXdr2oObHKI9w4Hv1XPKc898mE4kgYx58oqsc/JqqdLMDI4YjOLzom+EMlW8HFUd0QfjfAvxSL6sEq/a42fQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

}
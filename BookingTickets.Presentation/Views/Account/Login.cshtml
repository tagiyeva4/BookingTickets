@using BookingTickets.Core.ViewModels.UserSystemViewModels
@model UserLoginVm

<link rel="stylesheet" href="~/css/loginstyle.css" />

<section class="login-section">
    <div class="container">
        <div class="login-card">
            <h3 class="login-title">Login</h3>
            <p class="login-subtitle">
                "Access amazing events with ease! Log in now to manage your tickets and stay updated on upcoming experiences."
            </p>

            <form method="post" novalidate>
                <input asp-for="UserNameOrEmail" placeholder="User Name or Email" class="form-control-custom" />
                <span class="text-primary" asp-validation-for="UserNameOrEmail"></span>

                <input asp-for="Password" placeholder="Password" class="form-control-custom" type="password" />
                <span class="text-primary" asp-validation-for="Password"></span>

                <div class="form-check-custom">
                    <input type="checkbox" asp-for="RememberMe" id="RememberMeCheckbox" />
                    <label for="RememberMeCheckbox" class="text-muted">Remember Me</label>
                </div>

                <button type="submit" class="btn-gradient">
                    Login <i class="bi bi-arrow-right ms-2"></i>
                </button>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="extra-links">
                    <a asp-action="ForgotPassword">Forgot Password?</a> |
                    <a asp-action="Register">Register</a>|
                    <a asp-action="GoogleLogin" class="google-login">Google Login
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.21.0/jquery.validate.min.js" crossorigin="anonymous"></script>
}




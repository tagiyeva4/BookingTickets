    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const countElement = document.getElementById("basket-count-data");
            const badge = document.querySelector(".basketCountarea");

            if (countElement && badge) {
                const count = countElement.getAttribute("data-count");
                badge.innerText = count;
            }
        });
    </script>
    <script>
        $(".addBasket").click(function (ev) {
            ev.preventDefault();
            let url = $(this).attr("href");
            fetch(url)
                .then(response => response.text())
                .then(data => {
                    $(".minicart-content-box").html(data);
                })
        });
    </script>
    <script>
            const input = document.querySelector("#searchInput");

        input.addEventListener("keyup", function () {
            console.log(input.value);

            if (input.value) {
                fetch("/home/search?search=" + input.value)
                    .then(response => response.text())
                    .then(data => {
                        document.querySelector(".searchList").innerHTML = data;
                    });
            }
        });
    </script>

    <script>
                    document.addEventListener("scroll", function () {
            const mainBasket = document.querySelector(".main-menu .basketCountarea");
            const stickyBasket = document.querySelector(".sticky-header__content .basketCountarea");

            if (mainBasket && stickyBasket) {
                stickyBasket.innerText = mainBasket.innerText;
            }
        });



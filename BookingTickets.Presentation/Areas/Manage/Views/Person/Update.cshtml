@using BookingTickets.Core.Entities
@model PersonUpdateDto
@{
    var professions = ViewBag.Professions;
}
<div class="container">
    <div class="row">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="FullName"></span>
            </div>
            
           
           
            <div class="form-group">
                <span>Profession</span>
                <select class="form-select" asp-for="ProfessionId" asp-items=' new SelectList(professions ,"Id","Name")'>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Photo"></label>
                <input asp-for="Photo" class="form-control" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="Photo"></span>
                <span>New Image: <img id="ImgPreview" style="display:none" width="100" height="100" src="" alt="" /></span>
                <input asp-for="ImageUrl" type="hidden" />
                <span>Old Image:<img src=@Model.ImageUrl width="150" height="150" alt="" /></span>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a class="btn btn-outline-primary" asp-action="index">Go back</a>
        </form>
    </div>
</div>
@section scripts {
    @await Html.PartialAsync("_ValidationPartial")
}


@model PersonCreateDto
@{
    var professions = ViewBag.Professions;
}
<div class="container">
    <div class="row">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="FullName"></span>
            </div>
            <div class="form-group">
                <span>Select Profession</span>
                <select class="form-select" asp-for="ProfessionId">
                    <option disabled>Select Venue Name</option>
                    @foreach (var prof in professions)
                    {
                        <option value="@prof.Id">@prof.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Photo"></label>
                <input asp-for="Photo" class="form-control" aria-describedby="emailHelp">
                <img id="ImgPreview" style="display:none" width="150" height="150" src="" alt="" />
                <span class="text-danger" asp-validation-for="Photo"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a class="btn btn-outline-primary" asp-action="index">Go back</a>
        </form>
    </div>
</div>
@section scripts {
    @await Html.PartialAsync("_ValidationPartial")
}


@model SliderCreateDto
<div class="container">
    <div class="row">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="FestName"></label>
                <input asp-for="FestName" class="form-control" placeholder="Event" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="FestName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="ButtonText"></label>
                <input asp-for="ButtonText" class="form-control" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="ButtonText"></span>
            </div>
            <div class="form-group">
                <label asp-for="ButtonText"></label>
                <input asp-for="ButtonText" class="form-control" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="ButtonText"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo"></label>
                <input asp-for="Photo" class="form-control" aria-describedby="emailHelp">
                <img id="ImgPreview" style="display:none" width="150" height="150" src="" alt="" />
                <span class="text-danger" asp-validation-for="Photo"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a class="btn btn-outline-primary" asp-action="index">Go back</a>
        </form>
    </div>
</div>
@section scripts {
    @await Html.PartialAsync("_ValidationPartial")
}


            <div class="form-group">
                <label>Schedules</label>
                <div id="schedule-container">
                    @for (int i = 0; i < Model.EventSchedules.Count; i++)
                    {
                        <div class="schedule-item">
                            <input type="hidden" asp-for="EventSchedules[i].Id" />
                            <label>Date</label>
                            <input type="date" asp-for="EventSchedules[i].Date" class="form-control"
                                   value="@Model.EventSchedules[i].Date.ToString("yyyy-MM-dd")" />

                            <label>Start Time</label>
                            <input type="time" asp-for="EventSchedules[i].StartTime" class="form-control"
                                   value="@Model.EventSchedules[i].StartTime.ToString(@"hh\:mm")" />

                            <label>End Time</label>
                            <input type="time" asp-for="EventSchedules[i].EndTime" class="form-control"
                                   value="@Model.EventSchedules[i].EndTime.ToString(@"hh\:mm")" />

                            <button type="button" class="btn btn-danger remove-schedule">Remove</button>
                        </div>
                    }

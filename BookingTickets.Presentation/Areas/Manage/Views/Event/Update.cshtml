    <script>
        document.getElementById("add-schedule").addEventListener("click", function () {
            let container = document.getElementById("schedule-container");
            let index = container.getElementsByClassName("schedule-item").length;

            let today = new Date().toISOString().split("T")[0];
            let currentTime = new Date().toISOString().slice(11, 16);

            let html = `<div class="schedule-item">
                <input type="hidden" name="EventSchedules[${index}].Id" value="0" />
                <label>Date</label>
                <input type="date" name="EventSchedules[${index}].Date" class="form-control" required value="${today}" />
                <label>Start Time</label>
                <input type="time" name="EventSchedules[${index}].StartTime" class="form-control" required value="${currentTime}" />
                <label>End Time</label>
                <input type="time" name="EventSchedules[${index}].EndTime" class="form-control" required value="${currentTime}" />
                <button type="button" class="btn btn-danger remove-schedule">Remove</button>
            </div>`;

            let div = document.createElement("div");
            div.innerHTML = html;
            container.appendChild(div);
        });

        document.addEventListener("click", function (event) {
            if (event.target.classList.contains("remove-schedule")) {
                event.target.parentElement.remove();
            }
        });
    </script>

